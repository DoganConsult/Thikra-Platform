{
  "name": "@thikra/platform",
  "version": "1.0.0",
  "description": "ذِكرى - Perpetual Charity Through the Holy Quran | صدقة جارية بالقرآن الكريم",
  "author": "Thikra Community",
  "license": "MIT",
  "homepage": "https://thikra.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/thikra/thikra.git"
  },
  "keywords": [
    "quran",
    "islam",
    "memorization",
    "tajweed",
    "fiqh",
    "sadaqah",
    "charity",
    "memorial",
    "cloudflare",
    "workers"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "wrangler dev src/api/gateway.ts",
    "deploy": "wrangler deploy src/api/gateway.ts",
    "db:migrate": "wrangler d1 execute thikra-main --file=database/migrations/latest.sql",
    "db:seed": "wrangler d1 execute thikra-main --file=database/seeds/initial.sql",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build:sdk": "tsup src/sdk/index.ts --format cjs,esm --dts",
    "docs:generate": "typedoc src/sdk/index.ts"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0",
    "wrangler": "^3.25.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
